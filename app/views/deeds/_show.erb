<% deed = locals[:deed] %>
<div class="row">
  <div class="col-sm-6">
    <div class="col-xs-2 col-md-2">
    <!-- The buttons column -->
      <div class="row">
        <button class="width100 praisebtn" type="image" data-deed-id = "<%=deed.id%>"></button>
        <span class="badge praisebadge">
          <%= deed_praise_tally(deed) %>
        </span>
      </div>
      <div class="row">
        <button class="width100 shamebtn" type="image" data-deed-id = "<%=deed.id%>"></button>
        <span class="badge shamebadge">
          <%= deed_shame_tally(deed) %>
        </span>
      </div>
    </div>

    <div class="col-xs-10   col-md-8">
      <img src="<%= deed.user.image_url %>" class="profilePic"/> 
      <%= deed.summary %>
      <br>
      <%= datetime_to_modern(deed.created_at) %> by <a href="/users/<%= deed.user.id %>"><%= deed.user.username  %></a>
    </div>
  </div>
</div>