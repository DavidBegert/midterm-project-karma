<% deed = locals[:deed] %>
<% all_details = locals[:all_details] %>
<% vote_button_type = all_details ? "button" : "div" %>
<div class="row">
  <div class="col-sm-12">
    <div class="col-xs-2 col-md-1">
    <!-- The buttons column -->
      <div class="row">
        <<%= vote_button_type %> class="<%=praise_class(deed)%>" data-deed-id = "<%=deed.id%>">
        </<%= vote_button_type %>>
        <span class="badge praisebadge">
          <%= deed_praise_tally(deed) %>
        </span>
      </div>
      <div class="row">
        <<%= vote_button_type %> class="<%=shame_class(deed)%>" data-deed-id = "<%=deed.id%>">
        </<%= vote_button_type %>>
        <span class="badge shamebadge">
          <%= deed_shame_tally(deed) %>
        </span>
      </div>
    </div>

    <div class="col-xs-10   col-md-8">
      <% if all_details %>
        <div class="col-md-2">
        <img src="<%= deed.user.image_url %>" class="profilePic"/>
        </div>
      <% end %>
      <div class="col-md-9">
        <%= deed.summary %>
        <br><br>
        <i><%= datetime_to_modern(deed.created_at) %></i> by <a href="/users/<%= deed.user.id %>"><%= deed.user.username  %></a>
        <br><br>
        <a href="#" data-deed-id= <%=deed.id%> class="show-comments"><%= deed_comments_tally(deed) %> Comments </a>
      </div>
    </div>
  </div>
</div>

<br>
<div class="comment-holder" id="comments-<%=deed.id%>" ></div>
<hr>
<br>