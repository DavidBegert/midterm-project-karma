<!-- CREDIT CARD FORM STARTS HERE -->
<br>
<br>
<br>
<h1 class="text-center">Atone for your sins</h1>
<div class="center-block text-center"><i><small>(in the form of microtransactions)</small></i></div>
<br>

<div class="container">
    <div class="center-block" style="width:400px">
        <div class="panel panel-default credit-card-box">
            <div class="panel-heading display-table" >
                <div class="row display-tr" >
                    <h3 class="panel-title display-td" >Payment Details</h3>
                    <div class="display-td" >                            
                        <img class="img-responsive pull-right" src="http://i76.imgup.net/accepted_c22e0.png">
                    </div>
                </div>                    
            </div>
            <div class="panel-body">
                <form role="form" id="payment-form" action=""   >
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="form-group">
                                <label for="cardNumber">CARD NUMBER</label>
                                <div class="input-group">
                                    <input 
                                        type="tel"
                                        class="form-control"
                                        name="cardNumber"
                                        id="cardNumber"
                                        placeholder="Valid Card Number"
                                        autocomplete="cc-number"
                                        required autofocus 
                                    />
                                    <span class="input-group-addon"><i class="fa fa-credit-card"></i></span>
                                </div>
                            </div>                            
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-7 col-md-7">
                            <div class="form-group">
                                <label for="cardExpiry"><span class="hidden-xs">EXPIRATION</span><span class="visible-xs-inline">EXP</span> DATE</label>
                                <input 
                                    type="tel" 
                                    class="form-control" 
                                    id="cardExpiry"
                                    name="cardExpiry"
                                    placeholder="MM / YY"
                                    autocomplete="cc-exp"
                                    required 
                                />
                            </div>
                        </div>
                        <div class="col-xs-5 col-md-5 pull-right">
                            <div class="form-group">
                                <label for="cardCVC">CV CODE</label>
                                <input 
                                    type="tel" 
                                    class="form-control"
                                    id="cardCVC"
                                    name="cardCVC"
                                    placeholder="CVC"
                                    autocomplete="cc-csc"
                                    required
                                />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="form-group">
                                <label for="couponCode">COUPON CODE</label>
                                <input type="text" class="form-control" name="couponCode" />
                            </div>
                        </div>                        
                    </div>
                    <div class="row">
                        <div class="col-xs-4">
                            <button class="donation-button subscribe btn btn-success btn-md width100" name="donation" value="5" type="button">$5<br>(+5)</button>
                        </div>
                        <div class="col-xs-4">
                            <button class="donation-button subscribe btn btn-success btn-md width100" name="donation" value="15" type="button">$15<br>(+20)</button>
                        </div>
                        <div class="col-xs-4">
                            <button class="donation-button subscribe btn btn-success btn-md width100" name="donation" value="25" type="button">$25<br>(+40)</button>
                        </div>
                    </div>
                    <div class="row" style="display:none;">
                        <div class="col-xs-12">
                            <p class="payment-errors"></p>
                        </div>
                    </div>
                </form>
            </div>     
             <!-- CREDIT CARD FORM ENDS HERE -->
        </div>
    </div>
</div>
<br><br><br>
<%= erb :'modal' %>