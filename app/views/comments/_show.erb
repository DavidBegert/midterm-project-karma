<% comment = locals[:comment] %>
<div class="row">
  <div class="col-sm-1 col-sm-offset-1">
    <img src="<%= comment.user.image_url %>" class="profilePic profilePicSmall"/>
  </div>
  <div class="col-sm-10">
    <strong><%=comment.content%></strong>
    <br>
    <small><i><%= datetime_to_modern(comment.created_at) %></i> by <a href="/users/<%= comment.user.id %>"><%= comment.user.username  %></a></small>
    </div>
</div>
<hr>