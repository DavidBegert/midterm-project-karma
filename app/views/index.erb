<header>
  <%= erb :navbar %>
</header>

<div class="container">
  <div class="jumbotron">
    <h1>Atonr</h1>
    <p>Share Confessions</p>
</div>


<div class="container">
  <% Deed.all.limit(MAX_SHOW).order(id: :desc).each do |deed|  %>
    <div class="row">
      <div class="col-sm-6">
        <div class="col-xs-3 col-md-3">
        <!-- The buttons column -->
          <div class="row">
            <button class="btn btn-primary width100" type="button">
              Praise <span class="badge">
                <%= deed_praise_tally(deed) %>
              </span>
            </button>
          </div>
          <div class="row">
            <button class="btn btn-primary width100" type="button">
              Shame <span class="badge">
                <%= deed_shame_tally(deed) %>
              </span>
            </button>
          </div>
        </div>

        <div class="col-xs-9 col-md-7">
          <img src="<%= deed.user.image_url %>" class="profilePic"/> 
          <%= deed.summary %>
          <br>
          <%= datetime_to_modern(deed.created_at) %> by <a href="/users/<%= deed.user.id %>"><%= deed.user.username  %></a>
          <hr>
        </div>
      </div>
    </div>
  <% end %>
</div>
