<div class="container">
  <div class="jumbotron">
    <h1>Atonr</h1>
    <p>Share Confessions</p>
</div>

<!-- START OF FORM, may need to move to another file -->
<div class="container">
 <!--  <% if flash[:info] %>
   <p style="color: red; padding-left: 1%;"><%=flash[:info]%> </p>
  <%end%> -->
  <p id="confession_error">something went wrong</p>
  <form class="form-horizontal" id="confession_form">
    <div class="form-group">
      <div class="col-sm-10">
        <input type="text" id="confession_summary" name="summary" class="form-control" rows="4" placeholder="What have you done, child?">
      </div>
    </div>
  </form>
</div>
<div class="form-group">
  <div class="col-sm-offset-2 col-sm-10">
    <button id="confession_submit" class="btn btn-default">Submit</button>  
  </div>
</div>
        
<!-- END OF FORM -->
<div class="container">
  <% Deed.all.limit(MAX_SHOW).order(id: :desc).each do |deed|  %>
    <div class="row">
      <div class="col-sm-6">
        <div class="col-xs-2 col-md-2">
        <!-- The buttons column -->
          <div class="row">
            <button class="width100 praisebtn" type="image"></button>
            <span class="badge praisebadge">
              <%= deed_praise_tally(deed) %>
            </span>
          </div>
          <div class="row">
            <button class="width100 shamebtn" type="image"></button>
            <span class="badge shamebadge">
              <%= deed_shame_tally(deed) %>
            </span>
          </div>
        </div>

        <div class="vertical-align col-xs-10 col-md-8">
          <img src="<%= deed.user.image_url %>" class="profilePic"/> 
          <%= deed.summary %>
          <br>
          <%= datetime_to_modern(deed.created_at) %> by <a href="/users/<%= deed.user.id %>"><%= deed.user.username  %></a>
        </div>
      </div>
    </div>
    <br>
    <hr>
    <br>
  <% end %>
</div>
