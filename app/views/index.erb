
<div class="container">
  <div class="jumbotron">
  
  <% if current_user %>
  <div id="unella-quote">
    <% if user_karma_tally(current_user) < 0 %>
      "<%= DO_GOOD_UNELLA_QUOTES.sample %>" 
    <% elsif user_karma_tally(current_user) > 0 %>
      "<%= DO_BAD_UNELLA_QUOTES.sample %>"
    <% else %>
      "Could you be more average?"
    <% end %>
    <br/> <em> - Septum Unella </em>
  </div>
  <% end %>
    <h1>Atonr</h1>
    <p>Share Confessions</p>
  </div>
  <div class="alert alert-danger fade in" id="vote-error" style="display:none">
  <a class="close" data-hide="alert" aria-label="close">&times;</a>
  </div>

<!-- START OF FORM, may need to move to another file -->

<div class="row">
  <div class="col-sm-1">
    <button id="confession_submit" class="btn btn-default">Submit</button>  
  </div>
  <div class="col-sm-8">
    <form class="form-horizontal" id="confession_form">
      <input type="text" id="confession_summary" name="summary" class="form-control" rows="4" placeholder="What have you done, child?"/>
      <span id="confession_error">Your confession cannot be blank</span>
    </form>
  </div>
  </div>

  <br><br><br>
  <!-- END OF FORM -->
  <div id = deeds_container class="container">
    <%= erb :'deeds/_pagination', locals: {all_details: true, list: Deed.all.limit(MAX_SHOW).offset(session[:pagination_spot]).order(id: :desc)} %>
  </div>
</div>
