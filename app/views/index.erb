
<div class="container">
  <div class="jumbotron">
    <div class="row">
    <div class="col-md-3">
      <h1>Atonr</h1>
      <p>Share Confessions</p>
    </div>

    <div id="unella-quote" class="col-md-6">
      <% if user_karma_tally(current_user) < 0 %>
      "<%= DO_GOOD_UNELLA_QUOTES.sample %>" 
      <% elsif user_karma_tally(current_user) > 0 %>
        "<%= DO_BAD_UNELLA_QUOTES.sample %>"
      <% else %>
        "Could you be more average?"
      <% end %>
      <br/> <em> - Septa Unella </em>
    </div>

    <div class="col-md-3">
      <img class="img-fluid" id="unella" src="/img/unella.jpg" />
    </div>
    </div>
  </div>

<!-- START OF FORM, may need to move to another file -->
  <p id="confession_error">Your confession cannot be blank</p>
  <form class="form-horizontal" id="confession_form">
    <div class="form-group">
      <div class="col-sm-10">
        <input type="text" id="confession_summary" name="summary" class="form-control" rows="4" placeholder="What have you done, child?">
      </div>
    </div>
  </form>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button id="confession_submit" class="btn btn-default">Submit</button>  
    </div>
  </div>
        
  <!-- END OF FORM -->
  <div id = deeds_container class="container">
    <%= erb :'deeds/_pagination', locals: {list: Deed.all.limit(MAX_SHOW).offset(session[:pagination_spot]).order(id: :desc)} %>
  </div>
</div>
